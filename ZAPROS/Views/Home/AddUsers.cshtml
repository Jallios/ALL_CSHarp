@model ZAPROS.Models.User
@{
    Layout = "_Layout"; ViewBag.Title = "Add a User";
}

<h2>Add a Reservation <a asp-action="Index" class="btn btn-sm btn-secondary">Back</a></h2>
<form asp-action="AddUsers" method="post">
    <div class="form-group">
        <label for="Name">SurnameUser:</label>
        <input class="form-control" name="SurnameUser" />
    </div>
    <div class="form-group">
        <label for="Name">NameUser:</label>
        <input class="form-control" name="NameUser" />
    </div>
    <div class="form-group">
        <label for="Name">PatronymicUser:</label>
        <input class="form-control" name="PatronymicUser" />
    </div>
    <div class="form-group">
        <label for="Name">SeriNumUser:</label>
        <input class="form-control" name="SeriNumUser" />
    </div>
    <div class="form-group">
        <label for="StartLocation">MobileNumberUser:</label>
        <input class="form-control" name="MobileNumberUser" />
    </div>
    <div class="form-group">
        <label for="EndLocation">LoginUser:</label>
        <input class="form-control" name="LoginUser" />
    </div>
    <div class="form-group">
        <label for="Name">PasswordUser:</label>
        <input class="form-control" name="PasswordUser" />
    </div>
    <div class="form-group">
        <label for="Name">UserRoleId:</label>
        <input class="form-control" name="UserRoleId" />
    </div>
    <div class="text-center panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Add</button>
    </div>
</form>

<h3 class="alert">@ViewBag.Result</h3>

@if (Model != null)
{
    <h2>Reservation</h2>
    <table class="table table-sm table-striped table-bordered m-2">
        <thead>
            <tr>
                 <th>ID</th>
                <th>SurnameUser</th>
                <th>NameUser</th>
                <th>PatronymicUser</th>
                <th>SeriNumUser</th>
                <th>MobileNumberUser</th>
                <th>LoginUser</th>
                <th>PasswordUser</th>
                <th>UserRoleId</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>@Model.IdUser</td>
                <td>@Model.SurnameUser</td>
                <td>@Model.NameUser</td>
                <td>@Model.PatronymicUser</td>
                <td>@Model.SeriNumUser</td>
                <td>@Model.MobileNumberUser</td>
                <td>@Model.LoginUser</td>
                <td>@Model.PasswordUser</td>
                <td>@Model.UserRoleId</td>
            </tr>
        </tbody>
    </table>
}